{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@authcontext": ["libs/authcontext/src/index.ts"],
      "@api": ["libs/api/src/index.ts"]
    }
  },
  "rootDirs": [".", "apps", "libs"],
  "exclude": ["node_modules", "tmp"],
  "include": [
    "apps/**/*",
    "libs/**/*",
    "jest.config.ts",
    "nx.json",
    "package.json",
    "tsconfig.base.json",
    "tsconfig.json"
  ]
}
